# ENVIRONMENT CONFIGS
export CLICOLOR=1
# NOTE(mperrotte): these color sets are the same; BSD vs GNU
export LSCOLORS=ExFxcxdxBxegedabagacad
export LS_COLORS="di=1;34:ln=1;35:so=32:pi=33:ex=1;31:bd=34;46:cd=34;43:su=30;41:sg=30;46:tw=30;42:ow=30;43"
export GPG_TTY=$(tty) # Added for Krypton

# TOOL ENVIRONMENT CONFIGS
export GOPATH="$HOME/repos/go"
export NVM_DIR="$HOME/.nvm"
export NVM_INSTALL_DIR="/usr/local/opt/nvm"
# export JAVA_HOME="/Library/Java/JavaVirtualMachines/openjdk-12.jdk/Contents/Home/"
export JAVA_HOME="/Library/Java/JavaVirtualMachines/jdk1.8.0_202.jdk/Contents/Home/"
export OPENFAAS_URL="http://antenna.orionsbelt.ca"
export OPENFAAS_PREFIX="mperrotte"

# CUSTOM EXPORTS
DOTFILES_EXPORT="$HOME/dotfiles/bin"
FLUTTER_EXPORT="$HOME/repos/flutter/bin"
GOLANG_BIN_EXPORT="$GOPATH/bin"
POSTGRES_BIN_EXPORT="/usr/local/opt/postgresql@9.6/bin"
CURL_EXPORT="/usr/local/opt/curl/bin"
RUBY_EXPORT="/usr/local/opt/ruby/bin"
RUBY_EXPORT_BINARIES="/usr/local/lib/ruby/gems/2.6.0/bin"
JAVA_BIN_EXPORT="/Library/Java/JavaVirtualMachines/jdk1.8.0_202.jdk/Contents/Home/bin"
QT_EXPORT="/usr/local/opt/qt/bin"
OPENSSL_EXPORT="/usr/local/opt/openssl@1.1/bin"

# SYSTEM EXPORTS
LOCAL_BIN_EXPORT="/usr/local/bin"
LOCAL_SHARE_EXPORT="/usr/local/share"
LOCAL_SBIN_EXPORT="/usr/local/sbin"
USR_BIN_EXPORT="/usr/bin"
USR_SBIN_EXPORT="/usr/sbin"
ROOT_BIN_EXPORT="/bin"
ROOT_SBIN_EXPORT="/sbin"

export PATH="${OPENSSL_EXPORT}:${QT_EXPORT}:${POSTGRES_BIN_EXPORT}:$DOTFILES_EXPORT:$FLUTTER_EXPORT:$GOLANG_BIN_EXPORT:${CURL_EXPORT}:${RUBY_EXPORT_BINARIES}:${RUBY_EXPORT}:$LOCAL_BIN_EXPORT:$LOCAL_SHARE_EXPORT:$LOCAL_SBIN_EXPORT:$USR_BIN_EXPORT:$USR_SBIN_EXPORT:$ROOT_BIN_EXPORT:$ROOT_SBIN_EXPORT:${JAVA_BIN_EXPORT}"

# NOTE(mperrotte): incase things break, this is the default PATH
# export PATH="/usr/bin:/bin:/sbin:/usr/local/bin:/usr/local/sbin:/Users/mperrotte/.nvm"
