{
    // Workbench
    "workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Material Theme",
    "workbench.colorCustomizations": {
        "activityBarBadge.background": "#00BCD4",
        "list.activeSelectionForeground": "#00BCD4",
        "list.inactiveSelectionForeground": "#00BCD4",
        "list.highlightForeground": "#00BCD4",
        "scrollbarSlider.activeBackground": "#00BCD450",
        "editorSuggestWidget.highlightForeground": "#00BCD4",
        "textLink.foreground": "#00BCD4",
        "progressBar.background": "#00BCD4",
        "pickerGroup.foreground": "#00BCD4",
        "tab.activeBorder": "#00BCD4",
        "notificationLink.foreground": "#00BCD4"
    },
    // Window
    "window.zoomLevel": -1,
    "window.nativeTabs": true,
    // Terminal
    "terminal.external.osxExec": "iTerm.app",
    // Plugin
    // - Material Icon Theme
    "material-icon-theme.showUpdateMessage": false,
    // - ESLint
    "eslint.enable": true,
    "eslint.autoFixOnSave": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact"
    ],
    "eslint.run": "onSave",
    // - Flow
    "flow.useNPMPackagedFlow": true,
    // - Dart Code
    "dart.sdkPath": "~/repos/flutter/bin/cache/dark-sdk",
    "dart.debugSdkLibraries": true,
    "dart.debugExternalLibraries": true,
    "dart.showTodos": true,
    "dart.showLintNames": true,
    "dart.lineLength": 100,
    // - Standard Style
    "standard.semistandard": true,
    "standard.usePackageJson": true,
    // - Material theme
    "materialTheme.cache.workbench.settings": {
        "themeColours": "Darker",
        "accentPrevious": "Acid Lime",
        "accent": "Cyan"
    },
    // - GitLens
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true,
        "suppressUpdateNotice": true,
        "suppressWelcomeNotice": false
    },
    "gitlens.keymap": "alternate",
    // Editor
    "editor.stablePeek": true,
    "editor.renderIndentGuides": false,
    "editor.autoIndent": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.tabSize": 2,
    // Javascript
    "javascript.validate.enable": false,
    "javascript.format.enable": false,
    "javascript.format.insertSpaceBeforeFunctionParenthesis": false,
    // JSON
    "json.format.enable": false,
    // Typescript
    "typescript.autoImportSuggestions.enabled": false,
    "typescript.format.insertSpaceBeforeFunctionParenthesis": false,
    "typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    // File Associations
    "files.associations": {
        "*bash_profile*": "shellscript",
        "*bash_aliases": "shellscript",
        "*rc": "shellscript",
        "*Dockerfile*": "dockerfile",
        ".gitignore": "shellscript"
    },
}